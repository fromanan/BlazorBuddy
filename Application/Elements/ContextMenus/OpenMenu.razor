@inject IBrowserService BrowserService

<ContextMenu Id="@ContextMenuId.OPEN">
    <Item>
        <IconButton Class="icon-open-all context-menu-icon" ClickAction="@OpenAllClicked">
            Open @TabCountString
        </IconButton>
    </Item>
    <Item>
        <IconButton Class="icon-open-one context-menu-icon" ClickAction="@OpenOneClicked">
            Open @TabCountString in <b>one window</b>
        </IconButton>
    </Item>
    <Item>
        <IconButton Class="icon-open-this context-menu-icon" ClickAction="@OpenThisClicked">
            Open @TabCountString in <b>this window</b>
        </IconButton>
    </Item>
</ContextMenu>

@code
{
    #region Data Members

    private int TabCount { get; set; } = 0;

    #endregion

    #region Properties

    private string TabCountString => Utils.Pluralize(TabCount, "tab");

    #endregion

    #region Event Handlers

    private void OpenAllClicked(MouseEventArgs args)
    {
        BrowserService.OpenAllTabs();
    }

    private void OpenOneClicked(MouseEventArgs args)
    {
        BrowserService.OpenTabsInOneWindow();
    }

    private void OpenThisClicked(MouseEventArgs args)
    {
        BrowserService.OpenTabsInThisWindow();
    }

    #endregion
}
